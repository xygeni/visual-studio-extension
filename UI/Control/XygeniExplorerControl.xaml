<UserControl x:Class="vs2026_plugin.UI.Control.XygeniExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vs2026_plugin.UI.Control"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             Background="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowBackgroundBrushKey}}">
    <UserControl.Resources>
        <DataTemplate x:Key="TreeNodeTemplate">
            <StackPanel Orientation="Horizontal">
                <Image Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{Binding IconPath}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IconPath}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" 
                           Foreground="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            </StackPanel>
        </DataTemplate>
        
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowTextBrushKey}}"/>
        </Style>
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}">
                            <ContentPresenter.Resources>
                                <DataTemplate DataType="{x:Type local:TreeNodeData}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="{Binding IconPath}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IconPath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" 
                                                   Foreground="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ToolBar Band="0" Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static vsshell:EnvironmentColors.ToolWindowBorderBrushKey}}">
            <Button x:Name="RefreshBtn" Click="RefreshBtn_Click" ToolTip="Refresh">
                <TextBlock Text="ðŸ”„" Margin="2"/>
            </Button>
            <Button x:Name="RunScanBtn" Click="RunScanBtn_Click" ToolTip="Run Scan">
                <TextBlock Text="â–¶ï¸" Margin="2"/>
            </Button>
        </ToolBar>

        <TreeView x:Name="ExplorerTree" Grid.Row="1" SelectedItemChanged="ExplorerTree_SelectedItemChanged">
            <!-- DataTemplates will be added here or in code-behind if needed, 
                 but for simplicity we can use TreeViewItem objects -->
        </TreeView>
    </Grid>
</UserControl>
